<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences for Hospital Patient -->
        <record id="seq_hospital_patient" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">hospital.patient.sequence</field>
            <field name="prefix">HP</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for Hospital Patient Appointment -->
        <record id="seq_hospital_patient_appointment" model="ir.sequence">
            <field name="name">Patient Appointment</field>
            <field name="code">hospital.patient.appointment.sequence</field>
            <field name="prefix">PA</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>

